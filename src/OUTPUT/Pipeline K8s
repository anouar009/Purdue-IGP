pipeline {
    agent any
    stages {
        stage('Code Checkout') {
            steps {
                git url: 'https://github.com/anouar009/purdue-igp.git', branch: 'main'
            }
        }

        stage('Code Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn package'
            }
        }

        stage('copy war file') {
            steps {
                sh 'cp /var/lib/jenkins/workspace/$JOB_NAME/target/XYZtechnologies-1.0.war xyz_tech.war'
                
            }
        }

        stage('Build and Push Push Docker Image') {
            steps {
                withDockerRegistry([credentialsId: "123", url: ""]) {
                    script {
                        sh 'docker build -t xyz_tech:latest .'
                        sh 'docker tag  xyz_tech:latest anouar009/xyz_tech:latest'
                        sh 'docker push  anouar009/xyz_tech:latest'
                    }
                }
            }
        }

        stage('Deploy as container') {
            steps {
                sh 'docker run -itd anouar009/xyz_tech:latest'
            }
        }
    }
}
